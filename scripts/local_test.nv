-- Test local variables with stack-based storage

-- Test 1: Simple local in if block
println "Test 1: Local in if block"
if true then
    a := 10
    println a
end

-- Test 2: Multiple locals
println "Test 2: Multiple locals"
if true then
    x := 100
    y := 200
    println x + y
end

-- Test 3: Nested blocks
println "Test 3: Nested blocks"
if true then
    outer := 1
    if true then
        inner := 2
        println outer + inner
    end
    println outer
end

-- Test 4: Global variable
println "Test 4: Global variable"
global_var := 999
println global_var
